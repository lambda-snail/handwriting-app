@page "/"

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Handy - The Handwriting Studio</MudText>
    <MudText Align="Align.Center">Handy tries to make it easy to use Azure Document Intelligence to upload and scan documents.</MudText>
    <MudGrid Class="mt-8">
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="25" Class="rounded-lg pb-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5" Align="Align.Center">Documents</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudList Class="mx-auto mt-4">
                        <MudListItem Icon="@Icons.Material.Filled.LiveHelp">
                            Upload new pictures of handwritten documents
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.LiveHelp">
                            Manage existing documents
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.LiveHelp">
                            Bulk operations for convenience
                        </MudListItem>
                    </MudList>
                </MudCardContent>
                <MudCardActions Class="d-flex justify-center">
                    <MudLink Href="/documents" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large">Manage Documents</MudLink>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="25" Class="rounded-lg pb-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5" Align="Align.Center">Analyze</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudList Class="mx-auto mt-4">
                        <MudListItem Icon="@Icons.Material.Filled.LiveHelp">
                            Analyze documents that have been uploaded
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.LiveHelp">
                            More features coming soon :)
                        </MudListItem>
                    </MudList>
                </MudCardContent>
                <MudCardActions Class="d-flex justify-center">
                    <MudButton Href="/analyze" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large">Analyze Now</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>